apiVersion: servicecatalog.k8s.io/v1beta1
kind: ServiceInstance
metadata:
  name: importdisk-{{ name }}
  namespace: {{ namespace }}
  labels:
   task: import-disk-{{ name }}
spec:
  clusterServiceClassExternalName: {{ importdisk_apb }}
  clusterServicePlanExternalName: default
  parameters:
    admin_user: {{ user }}
    admin_password: {{ password }}
    pvc_name: {{ name }}
    url: {{ url }}
